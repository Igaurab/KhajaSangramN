<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/logo_ks"
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:background="@color/background"
        android:src="@drawable/logo_ks" />

    <!--Email Id or Username-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_login__layout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_ks"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/email_login__layout"
            android:layout_alignBottom="@+id/email_login__layout"
            android:hint="Email Id"
            android:layout_alignLeft="@+id/email_login__layout" />
    </com.google.android.material.textfield.TextInputLayout>

    <!--Password-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_login_layout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_login__layout"
        android:layout_centerHorizontal="true"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/password_login_layout"
            android:hint="Password"
            android:layout_alignLeft="@+id/password_login_layout" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_login_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn"
        android:onClick="loginUser"
        android:text="Login"
        android:textColor="#FFFFFF"/>

    <ImageView
        android:id="@+id/logo_fb"
        android:layout_width="60dp"
        android:layout_height="58dp"
        android:layout_alignLeft="@+id/login_btn"
        android:layout_alignBottom="@+id/login_btn"
        android:layout_marginLeft="147dp"
        android:layout_marginBottom="-97dp"
        app:srcCompat="@drawable/logo_fb" />

    <ImageView
        android:id="@+id/logo_google"
        android:layout_width="45dp"
        android:layout_height="58dp"
        android:layout_alignRight="@+id/logo_google"
        android:layout_alignBottom="@+id/login_btn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="201dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="-97dp"
        app:srcCompat="@drawable/logo_google"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/logo_google"
        android:layout_alignParentStart="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="-53dp"
        android:text="Don't Have an Account?"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="95dp" />

    <TextView
        android:id="@+id/signup_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txt_1"
        android:layout_alignBottom="@+id/logo_google"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="-55dp"
        android:layout_marginBottom="-53dp"
        android:text="SignUp"
        android:textColor="@color/colorPrimary"
        android:onClick="signUpActivity"/>

</RelativeLayout>